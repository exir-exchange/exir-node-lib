{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"indent": ["error", "tab"],
		"arrow-parens": ["error", "always"],
		"object-curly-spacing": ["error", "always"],
		"no-console": 0
	}
}
